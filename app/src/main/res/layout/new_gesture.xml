<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#CC000000">

    <android.gesture.GestureOverlayView
        android:id="@+id/gestures_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeOffset="700"
        android:gestureStrokeType="multiple"
        android:gestureColor="#FFF"
        android:gestureStrokeWidth="26.4"
        android:uncertainGestureColor="#000000">

        <TextView
            android:fontFamily="sans-serif-thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Draw a new Gesture"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/new_gesture_save_button"
                android:layout_gravity="bottom"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-thin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:text="Save"/>

            <TextView
                android:id="@+id/new_gesture_cancel_button"
                android:layout_gravity="bottom|right"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-thin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:text="Cancel"/>
    </android.gesture.GestureOverlayView>

</LinearLayout>